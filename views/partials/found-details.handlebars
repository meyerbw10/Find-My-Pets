<section class="card">
  <a href="/models/Found.js">
  <div class="card border-dark mb-3" style="max-width: 18rem;">
  <div class="card-header">Found!</div>
  <div class="card-body text-dark">
    <h5 class="card-title">{{name}}</h5>
    <h5 class="card-title">{{breed}}</h5>
    <h5 class="card-title">{{sex}}</h5>
    <h5 class="card-title">{{color}}</h5>
    <h5 class="card-title">{{dateLost}}</h5>
    <h5 class="card-title">{{weight}}</h5>
  </div>
</div>
</section>
<section class="container">
  <h3 class="gallery-name">{{gallery.name}}</h3>
  <h4>Opening Hour: {{format_time gallery.starting_date}}</h4>
  <h4>Closing Hour: {{format_time gallery.ending_date}}</h4>
  <section class="flex-row justify-center">
    {{#each  as |Found|}}
    {{> found-details}}
    {{/each}}
  </section>
</section>